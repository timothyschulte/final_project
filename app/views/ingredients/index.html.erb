<div class="page-header">
  <h1>
    Ingredients
    <a href="/ingredients/new" class="btn btn-lg btn-success">New Ingredient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Ingredient name</th>
        <th>Actions</th>
      </tr>

      <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.ingredient_name %></td>
        <td>
          <a href="/ingredients/<%= ingredient.id %>" class="btn btn-primary"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">search</i>Show</a>
          <a href="/ingredients/<%= ingredient.id %>/edit" class="btn btn-info"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">mode_edit</i> Edit</a>
          <a href="/delete_ingredient/<%= ingredient.id %>" class="btn btn-danger" rel="nofollow"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">delete</i> Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
