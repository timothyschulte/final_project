<div class="page-header">
  <h1>
    Bookmarks
    <a href="/bookmarks/new" class="btn btn-lg btn-success">New Bookmark</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Recipe</th>
        <th>Actions</th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      
      <tr>
        <td><%= User.find(bookmark.user_id).email %></td>
        <td><%= Recipe.find(bookmark.recipe_id).recipe_name %></td>
        <td>
          <a href="/recipes/<%= bookmark.recipe_id %>" class="btn btn-primary"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">search</i>Show</a>
          
          <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">delete</i>Delete
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
