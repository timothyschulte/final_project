<div class="page-header">
  <h1>
    Recipes ingredients
    <a href="/recipes_ingredients/new" class="btn btn-lg btn-success">New Recipes ingredient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recipe</th>
        <th>Ingredient</th>
        <th>Actions</th>
      </tr>

      <% @recipes_ingredients.each do |recipes_ingredient| %>
      <tr>
        <td><%= recipes_ingredient.recipe_id %></td>
        <td><%= recipes_ingredient.ingredient_id %></td>
        <td>
          <a href="/recipes_ingredients/<%= recipes_ingredient.id %>" class="btn btn-primary">Show</a>
          <a href="/recipes_ingredients/<%= recipes_ingredient.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recipes_ingredient/<%= recipes_ingredient.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
