<div class="page-header">
  <h1>
    Users
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Bio</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.bio %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">search</i> Show</a>
          <a href="/users/<%= user.id %>/edit" class="btn btn-info"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">mode_edit</i> Edit</a>
          <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">delete</i> Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
