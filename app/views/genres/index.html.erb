<div class="page-header">
  <h1>
    Genres
    <a href="/genres/new" class="btn btn-lg btn-success">New Genre</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Genre name</th>
        <th>Actions</th>
      </tr>

      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre_name %></td>
        <td>
          <a href="/genres/<%= genre.id %>" class="btn btn-primary"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">search</i>Show</a>
          <a href="/genres/<%= genre.id %>/edit" class="btn btn-info"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">mode_edit</i>Edit</a>
          <a href="/delete_genre/<%= genre.id %>" class="btn btn-danger" rel="nofollow"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">delete</i> Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
