<!-- Validation failure messages -->
<% if @genre.errors.any? %>
  <% @genre.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Genre #<%= @genre.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_genre/<%= @genre.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for genre_name -->
      <div class="form-group">
        <label for="genre_name" class="control-label">
          Genre name
        </label>

        <input type="text" id="genre_name" name="genre_name" placeholder="Genre name" class="form-control" value="<%= @genre.genre_name %>">
      </div>

      <button class="btn btn-info">
        Update Genre
      </button>
      or
      <a href="/genres/<%= @genre.id %>">Cancel</a>
    </form>
  </div>
</div>
