<div class="page-header">
  <h1><%= @recipe.recipe_name %></h1>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <img src="<%= @recipe.img_location %>" alt="Lasagna" style="width:100%;height:auto;">
    <br>
    <br>
    <dl class="dl-horizontal">

      <dt>User</dt>
      <dd><%= User.find(@recipe.user_id).email %></dd>
      
      <dt>Genre</dt>
      <dd><%= @genre.genre_name %></dd>
    
      <dt>Bookmarks</dt>
    <dd><ul>
      <% Bookmark.where(:recipe_id => @recipe.id ).each do |bookmark| %>
        <li><%= User.find(bookmark.user_id).email %></li>
        <% end %>
    </ul>
    </dd>
    
      <dt>Decription</dt>
      <dd><%= @recipe.decription %></dd>
      
      <dt>Prep time</dt>
      <dd><%= @recipe.prep_time %></dd>

      <dt>Recipe text</dt>
      <dd><%= @recipe.recipe_text %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/recipes" class="btn btn-primary"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">arrow_back</i> Back</a>
      <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-info"><i class="material-icons" style="vertical-align: middle; font-size: 18px;">mode_edit</i> Edit</a>
      <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-danger" rel="nofollow">
        <i class="material-icons" style="vertical-align: middle; font-size: 18px;">delete</i>Delete
      </a>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12">

    <br>
      <a href="/create_bookmark/<%= @recipe.user_id %>/<%= @recipe.id %>" class="btn btn-success" rel="nofollow">
        Create Bookmark
      </a>
          
  </div>
</div>